<!DOCTYPE html>
<html>
  <head>
    <title>MarketPlace</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="btn-group  col-md-2" role="group">
      <% if user_signed_in? %>
          <%= link_to "Log Out", destroy_user_session_path, class:"btn btn-info", method: :delete %>
      <% else %>
          <%= link_to "Log In", user_session_path, class:"btn btn-info" %>
          <%= link_to "Sign Up", new_user_registration_path, class:"btn btn-info" %>
      <% end %>
      </div>
    </ul>
    <p class="notice"> <%= notice %> </p>
    <p class="alert"> <%= alert %> </p>
    <%= yield %>
  </body>
</html>
