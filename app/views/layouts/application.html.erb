<!DOCTYPE html>
<html>
  <head>
    <title>MarketPlace</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <div class="btn-group  col-md-3" role="group">
        <%= link_to "Home", products_path, class: "btn btn-info" %>
        <% if user_signed_in? %>
          <%= link_to "Log Out", destroy_user_session_path, class: "btn btn-info", method: :delete %>
          <%= link_to "Users", users_path, class: "btn btn-info" %>
        <% else %>
          <%= link_to "Log In", user_session_path, class: "btn btn-info" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-info" %>
        <% end %>
      </div>
    </header><br><br>
    <% if notice %>
      <div class="mx-auto col-md-4 alert alert-success fade show">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
    <% if alert %>
      <div class=" mx-auto col-md-4 alert alert-danger fade show">
        <%= alert %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
