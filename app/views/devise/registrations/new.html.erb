<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field" >
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, autocomplete: "off", placeholder: "First Name", class: "form" %>
  </div>

  <div class="field" >
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, autocomplete: "off", placeholder: "Last Name", class: "form" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email,autocomplete: "email", placeholder: "Email", class: "form" %>
  </div>
  <div class="field" >
    <%= f.label :cellphone %><br>
    <%= f.text_field :cellphone, autocomplete: "off", placeholder: "Cellphone", class: "form" %>
  </div>

  <div class="field" >
    <%= f.label :address %><br>
    <%= f.text_field :address, autocomplete: "off", placeholder: "Adress", class: "form" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", class: "form" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "form" %>
  </div>
<% end %>
